{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "description": "Модель сообщения",
    "title": "Message",
    "type": "object",
    "required": [
        "id",
        "body",
        "seq",
        "createdAtUtc"
    ],
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid",
            "description": "Идентификатор сообщения",
            "nullable": false
        },
        "body": {
            "type": "string",
            "description": "Тело сообщения",
            "nullable": true
        },
        "seq": {
            "type": "integer",
            "description": "Порядковый номер сообщения в чате",
            "nullable": false
        },
        "createdAtUtc": {
            "type": "string",
            "format": "date-time",
            "description": "Время отправки сообщения",
            "nullable": false
        }
    },
    "additionalProperties": false
}
