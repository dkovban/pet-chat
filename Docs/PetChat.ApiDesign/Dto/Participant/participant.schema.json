{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "description": "Модель участника",
    "title": "Participant",
    "type": "object",
    "required": [
        "id",
        "userInfo",
        "participantRole",
        "joinedAtUtc"
    ],
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid",
            "description": "Идентификатор участника",
            "nullable": false
        },
        "userInfo": {
            "$ref": "../User/short-user.schema.json",
            "description": "Минимально необходимая информация для отображения пользователя",
            "nullable": false
        },
        "participantRole": {
            "$ref": "participant-role.schema.json",
            "description": "Роль участника",
            "nullable": false
        },
        "joinedAtUtc": {
            "type": "string",
            "format": "date-time",
            "description": "Дата создания участника",
            "nullable": false
        }
    },
    "additionalProperties": false
}
