{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "description": "Модель создания реакции на сообщение",
    "title": "Create Reaction",
    "type": "object",
    "required": [
        "emotionType",
        "count"
    ],
    "properties": {
        "emotionType": {
            "$ref": "emotion-type.schema.json",
            "description": "Тип реакции",
            "nullable": false
        },
        "count": {
            "type": "integer",
            "description": "Количество реакций этого типа",
            "nullable": "false"
        }
    },
    "additionalProperties": false
}
